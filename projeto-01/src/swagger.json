    "paths":{
        "/category":{
            "post":{
                "tags":["Category"],
                "summary":"Create category",
                "description":"Create a new category",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type": "object",
                                "properties":{
                                    "name":{
                                        "type": "string"
                                    },
                                    "description":{
                                        "type": "string"
                                    }
                                },
                                "example":{
                                    "name": "Category name sample",
                                    "description": "Category description sample"
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Created"
                    },
                    "500":{
                        "description":"Cateegory already exists"
                    }
                }
            },
            "get":{
                "tags":["Category"],
                "summary":"List all categories",
                "description": "List all categories",
                "responses":{
                    "200":{
                        "description": "Success"
                    },
                    "content":{
                        "application/json":{
                            "schema":{
                                "type": "array",
                                "items": {
                                    "type":"object",
                                    "properties":{
                                        "name":{
                                            "type": "string"
                                        },
                                        "description":{
                                            "type": "string"
                                        }
                                    }
                                }                              
                            }
                        }
                    }

                }
            }
        }
    }

